---
import Seo from "@/layouts/seo/index.astro";
import Layout from "@/layouts/common/index.astro";
import { siteMetadata } from "@/config";
import Image from "@/components/Image.astro";
import puns from "@/row/pun";

const lists: Record<string, string[]> = {
  TODO: [],
  PROCESSING: [],
};

// Welcome to Astro! Everything between these triple-dash code fences
// is your "component front matter". It never runs in the browser.
console.log("This runs in your terminal, not the browser!");
---

<!-- Below is your "component template." It's just HTML, but with
     some magic sprinkled in to help you build great templates. -->
<Seo title={siteMetadata.title} config={{ titleTemplate: "%s" }}>
  <Layout>
    <div style={{ margin: `0 auto` }}>
      <div
        style={{ margin: `0 auto`, maxWidth: `300px`, marginBottom: `1.45rem` }}
      >
        <Image path="doctor-strange-logo" />
      </div>
      <div style={{ display: "flex", flexDirection: "column" }}>
        {
          Object.keys(lists).map((key) => {
            return (
              lists[key].length > 0 && (
                <span
                  style={{
                    color: `rgba(0,0,0,.75)`,
                    fontWeight: 700,
                    margin: `1rem 0`,
                  }}
                >
                  {`${key.toUpperCase()} List:`}
                </span>
              )
            );
          })
        }
      </div>
      <div
        style={{
          margin: "1em .5em",
          paddingLeft: "1em",
          lineHeight: 1.2,
          fontSize: 14,
          backgroundColor: "#f1f1f1",
        }}
      >
        {
          puns.map((pun) => {
            return (
              <blockquote
                style={{
                  color: "rgba(0,0,0,.5)",
                  padding: "4px 0 3px",
                }}
              >
                {pun}
              </blockquote>
            );
          })
        }
      </div>
    </div>
  </Layout>
</Seo>

<style>
  h1 {
    color: orange;
  }
</style>
