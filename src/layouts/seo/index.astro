---
import { siteMetadata } from "@/config";
import "./global.scss";
import { fixedPopoverMountPointId } from "@/config";

interface Props {
  lang?: string;
  meta?: { property?: string; name?: string; content: string }[];
  title: string;
  config?: { titleTemplate: string };
}

const { config, meta = [], lang = "en" } = Astro.props;

let title = Astro.props.title;
const titleTemplate = config?.titleTemplate
  ? config.titleTemplate
  : `%s | ${siteMetadata.title}`;

title = titleTemplate.replace("%s", title);
---

<html lang={lang}>
  <head
    ><title>{title}</title>
    <meta name="description" content={siteMetadata.description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={siteMetadata.description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content={siteMetadata.author} />
    <meta name="twitter:title" content={title} />
    <meta charset="utf-8" />
    <meta name="twitter:description" content={siteMetadata.description} />
    {
      meta.map((m) => (
        <meta name={m.name} content={m.content} property={m.property} />
      ))
    }
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.0/dist/katex.min.css"
      integrity="sha384-Xi8rHCmBmhbuyyhbI88391ZKP2dmfnOl4rT9ZfRI7mLTdk1wblIUnrIq35nqwEvC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div id={fixedPopoverMountPointId}></div>
    <slot />
  </body>
</html>
