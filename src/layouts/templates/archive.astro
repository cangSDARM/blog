---
import Seo from "@/layouts/seo/index.astro";
import BaseLayout from "@/layouts/common/index.astro";
import { trailingUrl } from "@/utils/url";

type Props = Mdx;

const { frontmatter, url } = Astro.props;

const title =
  trailingUrl(url) === `/archive` ? `ArchivedArticle` : frontmatter?.title;
---

<Seo
  title={title}
  config={{
    titleTemplate: trailingUrl(url) === `/archive` ? `%s` : `%s | ArchivedArticle`,
  }}
>
  <BaseLayout>
    <slot />
  </BaseLayout>
</Seo>
