{
  "extends": "astro/tsconfigs/base",
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "types": ["@astrojs/image/client"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@/*": ["src/*"]
    },
    "strict": true,
  }
}
